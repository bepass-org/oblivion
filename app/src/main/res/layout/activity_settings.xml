<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/background"
      tools:context="org.bepass.oblivion.ui.SettingsActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <org.bepass.oblivion.component.Icon
          android:id="@+id/back"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:background="?selectableItemBackgroundBorderless"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="16dp"
          android:src="@drawable/ic_back"
          app:tint="@color/icon_color" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/shabnamlight"
          android:text="@string/settingsText"
          android:textColor="@color/text_color"
          android:textSize="24sp"
          tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <LinearLayout
            android:id="@+id/battery_optimization_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/batteryOpL"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/batteryOpLText"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/battery_opt_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/endpoint_type_layout"
            android:layout_width="match_parent"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <Spinner
                android:id="@+id/endpoint_type"
                android:entries="@array/endpointType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/endpointTypeText"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/endpointTypeTextDesc"
              android:textColor="#9A9A9A"
              android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/endpoint_layout"
            android:layout_width="match_parent"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <TextView
                android:id="@+id/endpoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/shabnammedium"
                android:text="engage.cloudflareclient.com:2048"
                android:textColor="@color/primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/endpointText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/endpointTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/port_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <TextView
                android:id="@+id/port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/shabnammedium"
                android:textColor="@color/primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/portTunText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/portTunTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/split_tunnel_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/blackList"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/blackListTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

              <CheckBox
                  android:id="@+id/check_box_dark_mode"
                  android:layout_width="50dp"
                  android:layout_height="38dp"
                  android:layout_marginStart="10dp"
                  android:buttonTint="@color/checkbox_tint"
                  android:scaleX="1.5"
                  android:scaleY="1.5"
                  android:translationX="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/turn_on_dark_mode"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/turn_on_dark_mode_desc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lan_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

              <CheckBox
                  android:id="@+id/lan"
                  android:layout_width="50dp"
                  android:layout_height="38dp"
                  android:layout_marginStart="10dp"
                  android:buttonTint="@color/checkbox_tint"
                  android:scaleX="1.5"
                  android:scaleY="1.5"
                  android:translationX="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/connectFromLanText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/connectFromLanTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/psiphon_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

              <CheckBox
                  android:id="@+id/psiphon"
                  android:layout_width="50dp"
                  android:layout_height="38dp"
                  android:scaleX="1.5"
                  android:scaleY="1.5"
                  android:layout_marginStart="10dp"
                  android:buttonTint="@color/checkbox_tint"
                  android:translationX="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/psiphonText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/psiphonTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/country_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <Spinner
                android:id="@+id/country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/chooseText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/chooseTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/license_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end">

            <TextView
                android:id="@+id/license"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/shabnammedium"
                android:text="ADSNjIOV56899QQ"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/primary"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/licenseText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/licenseTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:orientation="vertical">

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gool_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

              <CheckBox
                  android:id="@+id/gool"
                  android:layout_width="50dp"
                  android:layout_height="38dp"
                  android:scaleX="1.5"
                  android:scaleY="1.5"
                  android:layout_marginStart="10dp"
                  android:buttonTint="@color/checkbox_tint"
                  android:translationX="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:minWidth="100dp"
                android:text="@string/goolText"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/shabnam"
              android:text="@string/goolTextDesc"
              android:textColor="@color/subtitle_color"
              android:textSize="16sp" />

        </LinearLayout>
      </LinearLayout>
    </ScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>