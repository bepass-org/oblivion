<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="org.bepass.oblivion.SettingsActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="?attr/colorOnPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/back"
            android:fontFamily="@font/shabnamlight"
            android:text="@string/settingsText"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="24sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/battery_optimization_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/batteryOpL"
                        android:textAlignment="viewEnd"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/batteryOpLText"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/battery_opt_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/endpoint_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/endpointText"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/endpoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/shabnammedium"
                        android:maxLines="1"
                        android:text="engage.cloudflareclient.com:2048"
                        android:textColor="#E4AB53"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/endpointTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/port_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/portTunText"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/port"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/shabnammedium"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="8086"
                        android:textColor="#E4AB53"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/portTunTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/split_tunnel_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/blackList"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/blackListTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lan_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/shabnam"
                            android:minWidth="100dp"
                            android:text="@string/connectFromLanText"
                            android:textAlignment="viewStart"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/lan"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:translationX="5dp" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/connectFromLanTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/psiphon_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/shabnam"
                            android:minWidth="100dp"
                            android:text="@string/psiphonText"
                            android:textAlignment="viewStart"
                            android:textColor="?attr/colorSecondary"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/psiphon"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:translationX="5dp" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/psiphonTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/country_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/chooseText"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/chooseTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/license_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/licenseText"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/license"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/shabnammedium"
                        android:gravity="end"
                        android:maxLines="1"
                        android:text="ADSNjIOV56899QQ"
                        android:textColor="#E4AB53"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/licenseTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gool_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/shabnam"
                        android:minWidth="100dp"
                        android:text="@string/goolText"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <CheckBox
                            android:id="@+id/gool"
                            android:layout_width="50dp"
                            android:layout_height="38dp"
                            android:layout_marginStart="10dp"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:translationX="5dp" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/shabnam"
                    android:text="@string/goolTextDesc"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
