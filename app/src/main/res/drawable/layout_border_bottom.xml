<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Main background -->
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@android:color/transparent" />
    </shape>
  </item>
  <!-- Bottom border -->
  <item
    android:left="-2dp"
    android:right="-2dp"
    android:top="-2dp"
    android:bottom="0dp">
    <shape android:shape="rectangle">
      <solid android:color="#CCC" />
    </shape>
  </item>
</layer-list>
